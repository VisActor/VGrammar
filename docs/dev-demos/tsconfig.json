{
  "extends": "@internal/ts-config/tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },
  "references": [
    {
      "path": "../../packages/vgrammar-util"
    },
    {
      "path": "../../packages/vgrammar-core"
    },
    {
      "path": "../../packages/vgrammar"
    },
    {
      "path": "../../packages/vgrammar-coordinate"
    },
    {
      "path": "../../packages/vgrammar-hierarchy"
    },
    {
      "path": "../../packages/vgrammar-projection"
    },
    {
      "path": "../../packages/vgrammar-sankey"
    },
    {
      "path": "../../packages/vgrammar-wordcloud"
    },
    {
      "path": "../../packages/vgrammar-wordcloud-shape"
    },
    {
      "path": "../../packages/vgrammar-plot"
    }
  ],
  "include": ["src"]
}
